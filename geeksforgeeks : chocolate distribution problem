#include <bits/stdc++.h>
using namespace std; 

int distribution(int arr[], int n, int m) 
{ 
  sort(arr, arr+n);
  int dif=INT_MAX; 
  for(int i=0;i<n;i++)  
    { 
      if((i + (m-1)) < n) 
      {
      if((arr[i+(m-1)] - arr[i]) < dif) 
      {
        dif = (arr[i+(m-1)] - arr[i]); 
      } 
    } 
      } 
  return dif; 
} 

// time complexity : o(nlogn) 
// space complexity : o(1) 
