class Solution {
public:
    bool isValid(string s) {
      stack<char> s1; 
        
        for(int i=0;i<s.size();i++) 
        {
            if((s[i] == '(') || (s[i] == '[') || (s[i] == '{')) 
            {
                s1.push(s[i]); 
            } 
            else 
            { 
                if(s1.size() > 0) 
                {
                char ch=s1.top(); 
                
                if((s[i] == ')' && ch == '(') || (s[i] == ']' && ch == '[') || (s[i] == '}' && ch == '{')) 
                {
                   s1.pop();  
                } 
                else 
                {
                    return false; 
                } 
                    
            } 
                else 
                {
                    return false; 
                }
            }
            
        } 
        
        if(s1.empty() == true) 
        {
            return true; 
        } 
        else 
        {
            return false; 
        }
    }
}; 

// time complexity : o(n) 
// space complexity : o(n) 
